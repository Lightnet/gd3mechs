{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Godot",
            "type": "shell",
            "command": "${config:GodotTools.editorPath} --path \"${workspaceRoot}\"",
            "problemMatcher": []
        },
        {
            "label": "Godot Editor",
            "type": "shell",
            "command": "${config:GodotTools.editorPath} --path \"${workspaceRoot}\" --editor",
            "problemMatcher": []
        },
        {
            "label": "Godot Export",
            "type": "shell",
            "command": "${config:GodotTools.editorPath} --export \"Windows Desktop\" -path \"./release\" ",
            "problemMatcher": []
        },
        {
            "label": "Godot Script",
            "type": "shell",
            "command": "${config:GodotTools.editorPath} -s ${file}",
            "problemMatcher": []
        }
    ]
}